<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".RegistreseV">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
  >

    <TextView
        android:id="@+id/textView15"
        android:layout_width="343dp"
        android:layout_height="101dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/bungee"
        android:text="Registro para Vendedores"
        android:textAlignment="center"
        android:textColor="@color/colorOnSecondary"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="91dp"
        android:layout_height="36dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/bungee"
        android:text="Email:"
        android:textColor="@color/colorOnSecondary"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/txtemailRv"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:ems="10"
        android:fontFamily="@font/breadley"
        android:inputType="textPersonName"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/textView19"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/bungee"
        android:text="Password:"
        android:textColor="@color/colorOnSecondary"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/passwordRv"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:fontFamily="@font/breadley"
        android:ems="10"
        android:inputType="textPassword" />


    <TextView
        android:id="@+id/textView22"
        android:layout_width="275dp"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/bungee"
        android:text="Nombre del negocio:"
        android:textColor="@color/colorOnSecondary"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/nameRv"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:fontFamily="@font/breadley"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/bungee"
        android:text="DescripciÃ³n:"
        android:textColor="@color/colorOnSecondary"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/descripcionRv"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:ems="10"
        android:fontFamily="@font/breadley"
        android:gravity="start|top"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="150dp"
        android:layout_height="34dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/bungee"
        android:text="Contacto:"
        android:textColor="@color/colorOnSecondary"
        android:textSize="20sp" />


    <EditText
        android:id="@+id/contactoRv"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:ems="10"
        android:fontFamily="@font/breadley"
        android:gravity="start|top"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/registrarV"
        android:layout_width="279dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:text="SIGNUP"
        android:textSize="20sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="67dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#FFFFFF"
        android:onClick="btnIngresarV"
        android:text="Si tienes cuenta ingresa ya"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"/>


</LinearLayout>
    </ScrollView>
</layout>