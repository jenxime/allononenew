<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".IngresarV">

<LinearLayout
android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <TextView
        android:id="@+id/textView14"
        android:layout_width="349dp"
        android:layout_height="142dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/bungee"
        android:text="Bienvenido Vendedor"
        android:textAlignment="center"
        android:textColor="@color/colorOnSecondary"
        android:textSize="48sp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="116dp"
        android:layout_height="36dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/bungee"
        android:text="Email:"
        android:textColor="@color/colorOnSecondary"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/txtEmailIv"
        android:layout_width="321dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:fontFamily="@font/breadley"
        android:inputType="textPersonName"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="138dp"
        android:layout_height="39dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/bungee"
        android:text="Password:"
        android:textColor="@color/colorOnSecondary"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/txtPasswordIv"
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:fontFamily="@font/breadley"
        android:inputType="textPassword"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnIngresarI"
        android:layout_width="289dp"
        android:layout_height="63dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:text="Login"
        android:textSize="20sp" />

    <Button
        android:id="@+id/textviewRecuperarP"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#FFFFFF"
        android:text="Recuperar Password"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp" />

    <Button
        android:id="@+id/textviewRegistrar"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#FFFFFF"
        android:text="Registrese"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp" />

</LinearLayout>
</layout>
