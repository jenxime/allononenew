<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".IngresarV">

    <ProgressBar
        android:id="@+id/progressBarIv"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="358dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="330dp"
        android:layout_height="89dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/bungee"
        android:text="Ingresar"
        android:textAlignment="center"
        android:textColor="@color/colorOnSecondary"
        android:textSize="48sp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="116dp"
        android:layout_height="36dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="35dp"
        android:text="Email:"
        android:textColor="@color/colorOnSecondary"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/emailIv"
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:inputType="textPersonName"
        />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="116dp"
        android:layout_height="36dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="35dp"
        android:text="Password:"
        android:textColor="@color/colorOnSecondary"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/passwordIv"
        android:inputType="textPassword"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        />

    <Button
        android:id="@+id/button3"
        android:layout_width="289dp"
        android:layout_height="63dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:onClick="btnIngresarV"
        android:text="Login" />

    <Button
        android:id="@+id/button4"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#FFFFFF"
        android:onClick="btnRecuperarV"
        android:text="Recuperar Password"
        android:textColor="@android:color/darker_gray"

        />

    <Button
        android:id="@+id/button5"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#FFFFFF"
        android:onClick="btnRegistrarseV"
        android:text="Registrese"
        android:textColor="@android:color/darker_gray" />

</LinearLayout>